<Window x:Class="MyNetworkGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyNetworkGraph" Height="650" Width="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol panel -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Sosyal Ağ Analizi" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <Button Content="CSV Yükle" Height="35" Margin="0,0,0,6" Click="BtnLoadCsv_Click"/>
            <Button Content="BFS Çalıştır (Start=1)" Height="35" Margin="0,0,0,6" Click="BtnBfs_Click"/>
            <Button Content="DFS Çalıştır (Start=1)" Height="35" Margin="0,0,0,6" Click="BtnDfs_Click"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,6">
                <TextBlock Text="Start:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="TxtStart" Width="60" Text="1" Margin="0,0,12,0"/>

                <TextBlock Text="Goal:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="TxtGoal" Width="60" Text="4"/>
            </StackPanel>
            <Button Content="Dijkstra (1 → 4)" Height="35" Margin="0,0,0,6" Click="BtnDijkstra_Click"/>
            <Button Content="A* (1 → 4)" Height="35" Margin="0,0,0,6" Click="BtnAStar_Click"/>
            <Button Content="Top-5 Etkili Kullanıcı (Degree)" Height="35" Margin="0,0,0,6" Click="BtnTop5_Click"/>
            <Button Content="Toplulukları Renklendir (Welsh–Powell)" Height="35" Margin="0,0,0,12" Click="BtnWelshPowell_Click"/>

            <Button Content="Komşuluk Listesi (TXT) Dışa Aktar" Height="35" Margin="0,0,0,6" Click="BtnExportAdjList_Click"/>
            <Button Content="Komşuluk Matrisi (CSV) Dışa Aktar" Height="35" Margin="0,0,0,12" Click="BtnExportAdjMatrix_Click"/>
            <Button Content="Logu Dışa Aktar (TXT)" Click="BtnExportLog_Click" Margin="0,4,0,0"/>
            <Button Content="Canvas Screenshot (PNG)" Click="BtnScreenshot_Click" Margin="0,4,0,0"/>
            <Button Content="Log'u TXT Dışa Aktar" Click="BtnExportLog_Click" Margin="0,6,0,0" Height="34"/>
            <Button Content="Canvas PNG Kaydet" Click="BtnSaveCanvasPng_Click" Margin="0,6,0,0" Height="34"/>
            <TextBlock Text="Top 5 Etkili Kullanıcı (Degree Centrality)"
           FontWeight="Bold"
           Margin="0,10,0,4"/>

            <ListView x:Name="LvDegree"
          Height="140"
          Margin="0,0,0,6">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Node ID" Width="70"
                            DisplayMemberBinding="{Binding NodeId}" />
                        <GridViewColumn Header="Degree" Width="70"
                            DisplayMemberBinding="{Binding Degree}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Degree Centrality Hesapla"
        Click="BtnDegree_Click"
        Height="34"/>

            <Separator Margin="0,8,0,8"/>

            <TextBlock Text="Sonuç / Log" FontWeight="Bold" Margin="0,0,0,6"/>
            <TextBox x:Name="TxtLog" Height="420" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Sağ panel -->
        <Border Grid.Column="1" Margin="10" BorderBrush="Gray" BorderThickness="1" CornerRadius="6">
            <Canvas x:Name="GraphCanvas" Background="#111111"/>
        </Border>
    </Grid>
</Window>
